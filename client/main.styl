// see http://jeet.gs/
@import '../node_modules/jeet/stylus/jeet/index.styl'
// see https://github.com/jescalan/rupture#what-is-a-measure
@import '../node_modules/rupture/rupture/index.styl'

body
  font-family 'Roboto', sans-serif
  margin 0
  min-height 100vh
  overflow auto

  background-color: lightgrey

.banner
  background-color: rgb(0, 188, 212)

.app-bar
  z-index: 0
  height: 8em
  center(888px)

  *
    vertical-align top

  h1
    display inline-block
  .page-name
    color: white

.quill-toolbar
  border-bottom 1px solid lightgrey

.bottom
  border-top 1px solid lightgrey
  padding 16px 0px 16px 0px !important
  margin 0px 16px 0px 16px !important

.section
  margin-bottom: 16px

.social-svg
  height: 64px
  width: 64px
  fill white

.share-buttons
  center(1024px)
  position relative
  text-align: center
  button
    height 64px 
    width 64px
    border: none
    background-color white
    padding 0
    margin 3px

  .clipboard
    height 64px !important
    width 64px !important
    background-color white !important
    top -20px

.share-link
  text-align: center
  vertical-align center

  display flex
  padding-left 16px

  div
    flex-grow 1
  button
    flex-shrink 1
    margin-top 16px
    margin-right 16px

.sssshare-links
  padding 16px
  text-align center

  #view-link, #edit-link
    width 500px !important


.ql-editor, .ql-container, .document
  min-height 400px

.document
  height 100%

.keyword
  margin-right: 16px

.document
  position relative

  .fullscreen
    position: absolute
    bottom 16px
    right 16px

.badge
  float right
  span
    line-height: 2em
    text-align: center

  position absolute  !important
  bottom 0px
  right 16px

.watching-badge
  right 70px

.fullscreen-on
  margin 16px
  height 100%
  width 100%

  .badge
    svg
      display none !important

  .visitors-badge
    right 20px

  .watching-badge
    right 50px
    

.delete-menuitem
  color rgb(255, 50, 50) !important
  svg
    fill rgb(255, 100, 100) !important
  
.page
  margin: 16px auto
  z-index: 1200
  position: relative
  margin-top: -64px
  center(888px)

  .pagebar
    display: flex
    align-items center

    h1
      margin: 0
      padding: 16px
      flex-grow: 1
      height: 32px

    .page-toolbar
      flex-shrink: 1

      .button-group
        display: inline-block
        margin-right: 16px

        svg
          vertical-align: middle

  .page-content
    position relative
    min-height: 441px
    padding: 16px
    overflow: auto
    background-color: white

    img
      max-width: 100%
