// see http://jeet.gs/
@import '../node_modules/jeet/stylus/jeet/index.styl'
// see https://github.com/jescalan/rupture#what-is-a-measure
@import '../node_modules/rupture/rupture/index.styl'

body
  font-family 'Roboto', sans-serif
  margin 0
  min-height 100vh
  overflow auto

  background-color: lightgrey
  center(1024px)

.app-bar
  margin-bottom 16px

.quill-toolbar
  border-bottom 1px solid lightgrey

.links
  margin-top: 16px
  padding: 16px
  
.bottom
  border-top 1px solid lightgrey
  padding 16px 0px 16px 0px !important
  margin 0px 16px 0px 16px !important

.section
  margin-bottom: 16px

.social-svg
  height: 64px
  width: 64px
  fill white

.share-buttons
  button
    float: left
    width 64px
    border: none
    background-color: none
    padding 0
    margin 3px

.ql-editor, .ql-container, .document
  min-height 400px

.document
  height 100%

.keyword
  margin-right: 16px

.document
  position relative

  .fullscreen
    position: absolute
    bottom 16px
    right 16px

.badge
  span
    line-height: 2em
    text-align: center

.copy-links
  col(1/3)
  float left
  +tablet()
    col(1/1)
  +mobile()
    col(1/1)